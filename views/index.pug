doctype html
html
  head
    style
      include style.css
    script.
      const whTooltips = { colorLinks: true, iconizeLinks: false, renameLinks: false }
    script(src='https://wow.zamimg.com/widgets/power.js')

  body
      h1 Sail bank
      .contents
        ol.item-grid
          each item in contents
            li.item
              a(href=`https://www.classic.wowhead.com/item=${item.id}`)
                img(src=`https://wow.zamimg.com/images/wow/icons/large/${item.icon}.jpg`)

        ol.item-list
          each item in contents
            li.item
              a(href=`https://www.classic.wowhead.com/item=${item.id}`, data-wh-rename-link="true", data-wh-icon-size="small").
              span.count= `x ${item.Count}`